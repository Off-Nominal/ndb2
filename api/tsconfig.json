{
  "compilerOptions": {
    "target": "es2020",
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["es2021.string"],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*", "db/empty.js"],
  "exclude": ["node_modules"]
}
