{
  "name": "ndb2-api",
  "version": "2.1.0",
  "description": "Nostradambot 2.0 API",
  "main": "index.js",
  "scripts": {
    "clear": "rm -rf ./dist",
    "transfer-queries": "mkdir ./dist/db/queries/sql && cp ./src/db/queries/**/*.sql ./dist/db/queries/sql/",
    "build": "tsc && pnpm run transfer-queries",
    "dev": "NODE_ENV=dev nodemon --exec node --env-file=.env ./dist/index.js -e ts --exec \"pnpm run compile\"",
    "compile": "pnpm run clear && pnpm run build && node --env-file=.env ./dist/index.js",
    "start": "node ./dist/index.js",
    "db:migrate:create": "db-migrate create -m ./db/migrations",
    "db:migrate:up": "db-migrate up -m ./db/migrations",
    "db:migrate:down": "db-migrate down -m ./db/migrations",
    "db:migrate:up-prod": "db-migrate up -m ./db/migrations -e prod",
    "db:reset": "NODE_ENV=dev node ./db/reset.js",
    "db:copy": "pg_restore --verbose --clean --no-acl --no-owner -h localhost -U ndb2_owner -d ndb2",
    "sql-watch": "dotenv -- pgtyped -w -c pgtyped.config.json"
  },
  "license": "ISC",
  "dependencies": {
    "@pgtyped/runtime": "^2.4.2",
    "date-fns": "^3.6.0",
    "express": "^4.21.2",
    "express-zod-safe": "^1.5.0",
    "node-schedule": "^2.1.1",
    "pg": "^8.12.0",
    "typed-emitter": "^2.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@offnominal/ndb2-api-types": "workspace:*",
    "@pgtyped/cli": "^2.4.3",
    "@types/db-migrate-base": "^0.0.14",
    "@types/db-migrate-pg": "^0.0.13",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/node-schedule": "^2.1.7",
    "@types/pg": "^8.11.8",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv-cli": "^8.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.4",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": "22.x"
  }
}
